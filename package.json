{
  "name": "stations",
  "version": "0.0.0",
  "scripts": {
    "build:app": "ng build",
    "build:lambda": "netlify-lambda build ./src/lambda/src",
    "build:prod": "ng build --prod && npm run build:lambda",
    "lint:app": "ng lint",
    "lint:lambda": "eslint ./src/lambda/src/**/*.js",
    "lint": "npm run lint:app && npm run lint:lambda",
    "ng": "ng",
    "postinstall": "netlify-lambda install ./src/lambda",
    "serve:mock-data": "json-server --watch ./mock/data/mock-data.json --routes ./mock/routes.json",
    "start": "concurrently \"npm run start:app\" \"npm run start:lambda\"",
    "start:app": "ng serve",
    "start:mock": "concurrently --kill-others \"npm run serve:mock-data\" \"npm run start:app -- --configuration=mock\"",
    "start:lambda": "netlify-lambda serve ./src/lambda/src",
    "test": "jest",
    "test:coverage": "npm test -- --coverage --silent",
    "test:watch": "npm test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.0.0-rc.7",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^9.0.0-rc.7",
    "@angular/compiler": "^9.0.0-rc.7",
    "@angular/core": "^9.0.0-rc.7",
    "@angular/forms": "^9.0.0-rc.7",
    "@angular/http": "^7.2.9",
    "@angular/material": "~8.2.3",
    "@angular/platform-browser": "^9.0.0-rc.7",
    "@angular/platform-browser-dynamic": "^9.0.0-rc.7",
    "@angular/router": "^9.0.0-rc.7",
    "@angular/service-worker": "^9.0.0-rc.7",
    "core-js": "^2.5.4",
    "netlify-lambda": "^1.6.3",
    "ngx-mat-select-search": "^1.6.0",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.21",
    "@angular-devkit/build-angular": "^0.803.21",
    "@angular-devkit/core": "^8.3.21",
    "@angular-devkit/schematics": "^8.3.21",
    "@angular/cli": "~9.0.0-rc.7",
    "@angular/compiler-cli": "^9.0.0-rc.7",
    "@angular/language-service": "^9.0.0-rc.7",
    "@types/jest": "~24.0.24",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "husky": "~3.1.0",
    "jest": "~24.9.0",
    "jest-junit": "~10.0.0",
    "jest-preset-angular": "~8.0.0",
    "json-server": "^0.15.1",
    "ts-jest": "^24.2.0",
    "ts-node": "~8.5.4",
    "tslint": "~5.20.1",
    "typescript": "~3.6.4"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/api/**.ts",
      "src/core/**.ts",
      "src/modules/**.ts",
      "src/lambda/**.js"
    ],
    "roots": [
      "src"
    ],
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "./jest.config.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json",
        "ignoreCoverageForAllDecorators": true,
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  },
  "jest-junit": {
    "output": "./coverage/junit-report.xml"
  }
}
