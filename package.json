{
  "name": "stations",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build",
    "lint": "ng lint",
    "ng": "ng",
    "serve:mock-data": "json-server --watch ./mock/data/mock-data.json --routes ./mock/routes.json",
    "start": "ng serve",
    "start:mock": "concurrently --kill-others \"npm run serve:mock-data\" \"npm run start -- --configuration=mock\"",
    "test": "jest",
    "test:coverage": "npm test -- --coverage --silent",
    "test:watch": "npm test -- --watch",
    "e2e": "ng e2e"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test && npm run lint"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.2.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/material": "~6.4.7",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/pwa": "~0.8.3",
    "@angular/router": "^6.1.0",
    "@angular/service-worker": "^6.1.0",
    "core-js": "^2.5.4",
    "ngx-mat-select-search": "^1.6.0",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.3",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jest": "~23.3.10",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "concurrently": "^4.1.0",
    "husky": "~1.3.1",
    "jest": "~23.6.0",
    "jest-junit": "~5.2.0",
    "jest-preset-angular": "~6.0.2",
    "json-server": "^0.14.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/api/**.ts",
      "src/core/**.ts",
      "src/modules/**.ts"
    ],
    "roots": [
      "src"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./jest.config.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json",
        "ignoreCoverageForAllDecorators": true
      },
      "__TRANSFORM_HTML__": true
    }
  },
  "jest-junit": {
    "output": "./coverage/junit-report.xml"
  }
}
