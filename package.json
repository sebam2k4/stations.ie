{
  "name": "stations",
  "version": "0.0.0",
  "scripts": {
    "build:app": "ng build",
    "build:lambda": "netlify-lambda build ./src/lambda/src",
    "build:prod": "ng build --prod && npm run build:lambda",
    "lint:app": "ng lint",
    "lint:lambda": "eslint ./src/lambda/src/**/*.js",
    "lint": "npm run lint:app && npm run lint:lambda",
    "ng": "ng",
    "postinstall": "ngcc && netlify-lambda install ./src/lambda",
    "serve:mock-data": "json-server --watch ./mock/data/mock-data.json --routes ./mock/routes.json",
    "start": "concurrently \"npm run start:app\" \"npm run start:lambda\"",
    "start:app": "ng serve",
    "start:mock": "concurrently --kill-others \"npm run serve:mock-data\" \"npm run start:app -- --configuration=mock\"",
    "start:lambda": "netlify-lambda serve ./src/lambda/src",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.4",
    "@angular/cdk": "^10.2.7",
    "@angular/common": "^10.2.4",
    "@angular/compiler": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/forms": "^10.2.4",
    "@angular/material": "~10.2.7",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@angular/service-worker": "^10.2.4",
    "core-js": "^2.5.4",
    "netlify-lambda": "^1.6.3",
    "ngx-mat-select-search": "^3.2.0",
    "rxjs": "~6.5.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.21",
    "@angular-devkit/build-angular": "^0.1002.1",
    "@angular-devkit/core": "^10.2.1",
    "@angular-devkit/schematics": "^10.2.1",
    "@angular/cli": "~10.2.1",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@types/jest": "~26.0.19",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.1",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "husky": "~3.1.0",
    "jest": "~26.6.3",
    "jest-junit": "~12.0.0",
    "jest-localstorage-mock": "^2.4.6",
    "jest-preset-angular": "~8.3.2",
    "json-server": "^0.15.1",
    "ts-jest": "^26.4.4",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.0.5"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/api/**/**.ts",
      "src/core/**/**.ts",
      "src/modules/**/**.ts",
      "src/lambda/**/**.js",
      "!**.*.d.ts",
      "!src/**/*.module.ts",
      "!src/core/**/*-routing.module.ts",
      "!src/lambda/**/config.js",
      "!src/lambda/**/constants.js",
      "!src/lambda/**/*-constants.js"
    ],
    "roots": [
      "src"
    ],
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "./setup-jest.ts"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json",
        "ignoreCoverageForAllDecorators": true,
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  },
  "jest-junit": {
    "output": "./coverage/junit-report.xml"
  }
}
