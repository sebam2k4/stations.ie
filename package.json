{
  "name": "stations",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build",
    "build:prod": "ng build --prod",
    "lint": "ng lint",
    "ng": "ng",
    "serve:mock-data": "json-server --watch ./mock/data/mock-data.json --routes ./mock/routes.json",
    "start": "ng serve",
    "start:mock": "concurrently --kill-others \"npm run serve:mock-data\" \"npm run start -- --configuration=mock\"",
    "start:lambda:local": "node ./src/lambda/server-local.js",
    "test": "jest",
    "test:coverage": "npm test -- --coverage --silent",
    "test:watch": "npm test -- --watch",
    "e2e": "ng e2e",
    "build:lambda": "netlify-lambda build ./src/lambda/src",
    "start:lambda": "netlify-lambda serve ./src/lambda/src"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.9",
    "@angular/cdk": "^7.3.4",
    "@angular/common": "^7.2.9",
    "@angular/compiler": "^7.2.9",
    "@angular/core": "^7.2.9",
    "@angular/forms": "^7.2.9",
    "@angular/http": "^7.2.9",
    "@angular/material": "~7.3.4",
    "@angular/platform-browser": "^7.2.9",
    "@angular/platform-browser-dynamic": "^7.2.9",
    "@angular/pwa": "^0.13.6",
    "@angular/router": "^7.2.9",
    "@angular/service-worker": "^7.2.9",
    "core-js": "^2.5.4",
    "netlify-lambda": "^1.4.5",
    "ngx-mat-select-search": "^1.6.0",
    "rxjs": "~6.4.0",
    "zone.js": "~0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.6",
    "@angular/cli": "~7.3.6",
    "@angular/compiler-cli": "^7.2.9",
    "@angular/language-service": "^7.2.9",
    "@types/jest": "~23.3.10",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "concurrently": "^4.1.0",
    "husky": "~1.3.1",
    "jest": "~23.6.0",
    "jest-junit": "~5.2.0",
    "jest-preset-angular": "~6.0.2",
    "json-server": "^0.14.2",
    "ts-node": "~8.0.3",
    "tslint": "~5.14.0",
    "typescript": "~3.2.4"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/api/**.ts",
      "src/core/**.ts",
      "src/modules/**.ts"
    ],
    "roots": [
      "src"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./jest.config.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json",
        "ignoreCoverageForAllDecorators": true
      },
      "__TRANSFORM_HTML__": true
    }
  },
  "jest-junit": {
    "output": "./coverage/junit-report.xml"
  }
}
