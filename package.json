{
  "name": "stations",
  "version": "0.0.0",
  "scripts": {
    "build:app": "ng build",
    "build:lambda": "netlify-lambda build ./src/lambda/src",
    "build:prod": "ng build --prod && npm run build:lambda",
    "lint": "ng lint",
    "ng": "ng",
    "postinstall": "netlify-lambda install ./src/lambda",
    "serve:mock-data": "json-server --watch ./mock/data/mock-data.json --routes ./mock/routes.json",
    "start": "concurrently \"npm run start:app\" \"npm run start:lambda\"",
    "start:app": "ng serve",
    "start:mock": "concurrently --kill-others \"npm run serve:mock-data\" \"npm run start:app -- --configuration=mock\"",
    "start:lambda": "netlify-lambda serve ./src/lambda/src",
    "test": "jest",
    "test:coverage": "npm test -- --coverage --silent",
    "test:watch": "npm test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/http": "^7.2.9",
    "@angular/material": "~8.2.3",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/pwa": "^0.13.6",
    "@angular/router": "^8.2.14",
    "@angular/service-worker": "^8.2.14",
    "core-js": "^2.5.4",
    "ngx-mat-select-search": "^1.6.0",
    "rxjs": "~6.5.3",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.21",
    "@angular-devkit/build-angular": "~0.803.21",
    "@angular-devkit/core": "^8.3.21",
    "@angular-devkit/schematics": "^8.3.21",
    "@angular/cli": "~8.3.21",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@types/jest": "~23.3.10",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.2.1",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "husky": "~1.3.1",
    "jest": "~23.6.0",
    "jest-junit": "~5.2.0",
    "jest-preset-angular": "~6.0.2",
    "json-server": "^0.14.2",
    "netlify-lambda": "^1.4.3",
    "ts-node": "~8.0.3",
    "tslint": "~5.14.0",
    "typescript": "~3.5.3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "src/api/**.ts",
      "src/core/**.ts",
      "src/modules/**.ts",
      "src/lambda/**.js"
    ],
    "roots": [
      "src"
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./jest.config.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json",
        "ignoreCoverageForAllDecorators": true
      },
      "__TRANSFORM_HTML__": true
    }
  },
  "jest-junit": {
    "output": "./coverage/junit-report.xml"
  }
}
